<div class="row">
  <% title 'Pedidos' %>
</div>

<%= render 'layouts/partials/messages' %>

<%= form_tag(orders_path, method: 'get') do %>
  <div class="card mb-lg advanced-search-form bg-dark text-light" id="filters">
    <div class="card-header text-info">
      Pesquisa avan√ßada
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-sm-4">
          <%= label_tag :kind, 'Tipo' %>
          <%= select_tag :kind, options_for_select(@kinds, params[:kind]), include_blank: 'Todos', class: 'form-control' %>
        </div>
        <div class="col-sm-4">
          <%= label_tag :tiny_order_id, 'ID Tiny' %>
          <%= text_field_tag :tiny_order_id, params[:tiny_order_id], class: 'form-control', placeholder: 'ID do pedido no Tiny' %>
        </div>
        <div class="col-sm-4">
          <%= label_tag :shopify_order_id, 'ID Shopify' %>
          <%= text_field_tag :shopify_order_id, params[:shopify_order_id], class: 'form-control', placeholder: 'ID do pedido no Shopify' %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= button_tag class: 'btn btn-secondary text-info', name: '' do %><i class="fa fa-search text-info"></i> Pesquisar<% end %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-12">
    <table class="table table-dark table-hover table-responsive" style="overflow-x: scroll;" id="orders-table">
      <thead>
        <tr>
          <th width="50" class="text-center"><i class="fa fa-ellipsis-v"></i></th>
          <th class="text-center"><%= Order.human_attribute_name :id %></th>
          <th class="text-center"><%= Order.human_attribute_name :kinds %></th>
          <th class="text-center"><%= Order.human_attribute_name :tiny_order_id %></th>
          <th class="text-center"><%= Order.human_attribute_name :shopify_order_id %></th>
          <th class="text-center"><%= Order.human_attribute_name :tags %></th>
          <th class="text-center"><%= Order.human_attribute_name :created_at %></th>
          <th class="text-center"><%= Order.human_attribute_name :updated_at %></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <div class="btn-group" role="group" aria-label="Basic example">
                <%= link_to order_path(order), class: 'btn btn-light btn-sm text-dark', target: '_blank' do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </div>
            </td>
            <td class="text-center"><%= order.id %></td>
            <td class="text-center"><%= order.kinds %></td>
            <td class="text-center">
              <%= order.tiny_order_id %> - 
              <span class="badge bg-primary" style="cursor: pointer;" onclick="window.open('<%= ENV.fetch('TINY_ORDER_URL', 'https://erp.tiny.com.br/pedidos/vendas#edit/=') %><%= order.tiny_order_id %>', '_blank');">
                Ver no Tiny
              </span>
            </td>
            <td class="text-center">
              <% if order.shopify_order_id.present? %>
                <%= order.shopify_order_id %> - 
                <span class="badge bg-success" style="cursor: pointer;" onclick="window.open('<%= ENV.fetch('SHOPIFY_ORDER_URL', 'https://admin.shopify.com/admin/orders/') %><%= order.shopify_order_id %>', '_blank');">
                  Ver no Shopify
                </span>
              <% else %>
                <span class="badge bg-secondary">x</span>
              <% end %>
            </td>
            <td class="text-center"><%= order.tags.present? ? order.tags : "<span class='badge bg-secondary'>x</span>".html_safe %></td>
            <td class="text-center"><%= order.created_at.strftime('%d/%m/%Y %H:%M') %></td>
            <td class="text-center"><%= order.updated_at.strftime('%d/%m/%Y %H:%M') %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="8">
            <%= page_entries_info @orders %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>

<%= will_paginate @orders, list_classes: %w[pagination justify-content-center mt-lg], inner_window: 1 %>
