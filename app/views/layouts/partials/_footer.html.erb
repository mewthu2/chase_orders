<footer class="main-footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Logo e Informações da Empresa -->
      <div class="footer-section">
        <div class="footer-brand">
          <%= image_tag "admin/chase-logo.png", alt: "ChaseOrders", class: "footer-logo" %>
          <p class="footer-description">
            Sistema de gestão de pedidos e cupons
          </p>
        </div>
      </div>

      <!-- Links Úteis -->
      <div class="footer-section">
        <h4 class="footer-title">Links Úteis</h4>
        <ul class="footer-links">
          <li>
            <%= link_to root_path, class: "footer-link" do %>
              <i class="fas fa-home"></i>
              <span>Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_path(current_user), class: "footer-link" do %>
              <i class="fas fa-user-edit"></i>
              <span>Meu Perfil</span>
            <% end %>
          </li>
          <% if current_user&.profile_id == 1 %>
            <li>
              <%= link_to dashboard_index_path, class: "footer-link" do %>
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Suporte e Ajuda -->
      <div class="footer-section">
        <h4 class="footer-title">Suporte & Ajuda</h4>
        <div class="support-links">
          <a href="https://wa.me/5516992375432" target="_blank" class="support-link whatsapp-link">
            <i class="fab fa-whatsapp"></i>
            <div class="support-info">
              <span class="support-label">WhatsApp</span>
              <span class="support-text">Ajuda e Suporte - Chame o Daniel</span>
            </div>
          </a>
          <a href="https://chasebrasil.com" target="_blank" class="support-link website-link">
            <i class="fas fa-globe"></i>
            <div class="support-info">
              <span class="support-label">Site Oficial</span>
              <span class="support-text">chasebrasil.com</span>
            </div>
          </a>
        </div>
      </div>

      <!-- Informações do Usuário -->
      <div class="footer-section">
        <h4 class="footer-title">Sessão Atual</h4>
        <div class="user-session-info">
          <div class="session-user">
            <i class="fas fa-user-circle"></i>
            <div class="session-details">
              <span class="session-name"><%= current_user.name %></span>
              <span class="session-role">
                <% case current_user.profile_id
                   when 1 %>
                  Administrador
                <% when 2 %>
                  Gerente
                <% else %>
                  Usuário
                <% end %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <div class="footer-copyright">
        <p>&copy; <%= Date.current.year %> ChaseOrders. Todos os direitos reservados.</p>
        <p class="footer-version">Versão 1.0 </p>
      </div>
    </div>
  </div>
</footer>

<style>
.main-footer {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-top: 1px solid #2d3748;
  margin-top: auto;
  position: relative;
  z-index: 100;
}

.footer-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 1rem 1rem;
}

.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-section {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.footer-brand {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.footer-logo {
  height: 40px;
  width: auto;
  max-width: 150px;
  object-fit: contain;
}

.footer-description {
  color: #a0aec0;
  font-size: 0.9rem;
  line-height: 1.5;
  margin: 0;
}

.footer-title {
  color: #ffffff;
  font-size: 1.1rem;
  font-weight: 600;
  margin: 0 0 0.5rem 0;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid #4299e1;
  display: inline-block;
}

.footer-links {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.footer-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #a0aec0;
  text-decoration: none;
  padding: 0.5rem;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
  font-size: 0.9rem;
}

.footer-link:hover {
  color: #ffffff;
  background-color: rgba(66, 153, 225, 0.1);
  transform: translateX(5px);
}

.footer-link i {
  font-size: 1rem;
  width: 16px;
  text-align: center;
}

.support-links {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.support-link {
  display: flex;
  align-items: center;
  gap: 1rem;
  color: #a0aec0;
  text-decoration: none;
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid #2d3748;
  transition: all 0.3s ease;
  background-color: rgba(45, 55, 72, 0.3);
}

.support-link:hover {
  color: #ffffff;
  border-color: #4299e1;
  background-color: rgba(66, 153, 225, 0.1);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(66, 153, 225, 0.2);
}

.whatsapp-link:hover {
  border-color: #25d366;
  background-color: rgba(37, 211, 102, 0.1);
  box-shadow: 0 4px 12px rgba(37, 211, 102, 0.2);
}

.whatsapp-link:hover i {
  color: #25d366;
}

.website-link:hover i {
  color: #4299e1;
}

.support-link i {
  font-size: 1.5rem;
  flex-shrink: 0;
}

.support-info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.support-label {
  font-weight: 600;
  font-size: 0.9rem;
}

.support-text {
  font-size: 0.8rem;
  opacity: 0.8;
}

.user-session-info {
  padding: 1rem;
  background-color: rgba(45, 55, 72, 0.3);
  border-radius: 0.5rem;
  border: 1px solid #2d3748;
}

.session-user {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.session-user i {
  font-size: 2rem;
  color: #4299e1;
}

.session-details {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.session-name {
  color: #ffffff;
  font-weight: 600;
  font-size: 0.95rem;
}

.session-role {
  color: #a0aec0;
  font-size: 0.8rem;
}

.footer-bottom {
  border-top: 1px solid #2d3748;
  padding-top: 1.5rem;
}

.footer-copyright {
  text-align: center;
  color: #a0aec0;
}

.footer-copyright p {
  margin: 0.25rem 0;
  font-size: 0.85rem;
}

.footer-version {
  opacity: 0.7;
  font-size: 0.75rem !important;
}

/* Responsivo */
@media (max-width: 768px) {
  .footer-container {
    padding: 1.5rem 0.75rem 1rem;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .footer-logo {
    height: 35px;
    max-width: 120px;
  }
  
  .support-links {
    gap: 0.75rem;
  }
  
  .support-link {
    padding: 0.75rem;
  }
  
  .support-link i {
    font-size: 1.25rem;
  }
}

@media (max-width: 480px) {
  .footer-container {
    padding: 1rem 0.5rem 0.75rem;
  }
  
  .footer-content {
    gap: 1rem;
  }
  
  .footer-section {
    gap: 0.75rem;
  }
  
  .support-link {
    padding: 0.5rem;
    gap: 0.75rem;
  }
  
  .footer-title {
    font-size: 1rem;
  }
}

/* Animações */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.whatsapp-link:hover i {
  animation: pulse 1.5s infinite;
}

/* Garantir que o footer fique no final da página */
.wrapper {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 70px);
}

.wrapper > .main-footer {
  margin-top: auto;
}
</style>