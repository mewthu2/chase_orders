
<div class="login">
  <div class="row">
    <div class="col-10 col-sm-4 col-md-4 col-lg-4">
      <%= image_tag 'admin/chase-logo', class: 'luminoso', style: 'width:120%; height: 100%;' %>
    </div>
    <div class="col-12 col-sm-4 col-md-4 col-lg-4 mt-4 mb-4">
      <h2 class="d-flex justify-content-center" style="color: lightblue;">Acompanhamento de pedidos</h2>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-4 col-md-4 col-lg-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label 'Seu e-mail:' %><br />
          <div class="input-group">
            <div class="input-group-text"><i class="fas fa-envelope"></i></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
        </div>

        <div class="field">
          <%= f.label 'Sua senha:' %><br />
          <div class="input-group">
            <div class="input-group-text"><i class="fas fa-lock"></i></div>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Logar", class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<style>
  .login {
    margin-left: -19em !important;
    margin-top: 9em !important;
  }

  .wrapper {
        background-image: repeating-radial-gradient(circle at 0px 0px, transparent 0px, rgb(0, 0, 0) 20px), repeating-linear-gradient(rgba(19, 20, 49, 0.333), rgb(19, 20, 49));
  }

  .luminoso {
    box-shadow: 0 0 21px 7px rgba(255, 255, 255, 0.7);
  }
</style>