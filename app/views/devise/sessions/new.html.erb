<div class="login-container">
  <!-- Login card -->
  <div class="login-card">
    <div class="logo-container">
      <%= image_tag 'admin/chase-logo', class: 'logo-image' %>
    </div>
    
    <h2 class="login-title">Painel Administrativo</h2>
    
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label 'Seu e-mail:', class: 'form-label' %>
          <div class="input-group">
            <div class="input-group-text"><i class="fas fa-envelope"></i></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Digite seu e-mail' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'Sua senha:', class: 'form-label' %>
          <div class="input-group">
            <div class="input-group-text"><i class="fas fa-lock"></i></div>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Digite sua senha' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, 'Lembrar de mim', class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="form-actions">
          <%= f.submit "Entrar", class: 'btn btn-login' %>
        </div>
      <% end %>
    </div>
    
    <div class="login-footer">
      <p>Â© <%= Date.today.year %> Chase Brasil. Todos os direitos reservados.</p>
    </div>
  </div>
</div>

<style>
  /* Base styles */
  body {
    margin: 0;
    padding: 0;
    min-height: 145vh;
    background-color: #121212;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  .wrapper {
    width: 100% !important;
    margin-left: 0 !important;
  }
  /* Login container */
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }
  
  /* Login card */
  .login-card {
    width: 100%;
    max-width: 420px;
    background-color: rgba(18, 18, 18, 0.85);
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    padding: 2.5rem;
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.1);
    animation: fadeIn 0.8s ease-out;
    margin: 0;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  /* Logo */
  .logo-container {
    text-align: center;
    margin-bottom: 1.5rem;
  }
  
  .logo-image {
    width: 180px;
    height: auto;
    box-shadow: 0 0 25px 8px rgba(0, 191, 255, 0.3);
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .logo-image:hover {
    box-shadow: 0 0 30px 10px rgba(0, 191, 255, 0.4);
    transform: scale(1.02);
  }
  
  /* Title */
  .login-title {
    color: #00bfff;
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 500;
    font-size: 1.8rem;
    text-shadow: 0 0 10px rgba(0, 191, 255, 0.5);
  }
  
  /* Form */
  .login-form {
    margin-bottom: 1.5rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    color: #e0e0e0;
    font-size: 0.95rem;
  }
  
  .input-group {
    display: flex;
    border-radius: 6px;
    overflow: hidden;
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }
  
  .input-group:focus-within {
    box-shadow: 0 0 0 2px rgba(0, 191, 255, 0.5);
  }
  
  .input-group-text {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    background-color: #1e1e1e;
    color: #00bfff;
    border: none;
  }
  
  .form-control {
    flex: 1;
    padding: 12px 15px;
    background-color: #2a2a2a;
    border: none;
    color: #ffffff;
    font-size: 1rem;
    outline: none;
  }
  
  .form-control::placeholder {
    color: #888888;
  }
  
  .form-check {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .form-check-input {
    margin-right: 0.5rem;
    accent-color: #00bfff;
  }
  
  .form-check-label {
    color: #cccccc;
    font-size: 0.9rem;
  }
  
  /* Button */
  .btn-login {
    width: 100%;
    padding: 12px;
    background: linear-gradient(135deg, #0088cc, #00bfff);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 191, 255, 0.3);
  }
  
  .btn-login:hover {
    background: linear-gradient(135deg, #00bfff, #0088cc);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 191, 255, 0.4);
  }
  
  .btn-login:active {
    transform: translateY(1px);
  }
  
  /* Footer */
  .login-footer {
    text-align: center;
    margin-top: 2rem;
    color: #666666;
    font-size: 0.8rem;
  }
  
  /* Responsive styles */
  @media (max-width: 768px) {
    .login-card {
      padding: 2rem;
    }
    
    .logo-image {
      width: 150px;
    }
    
    .login-title {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 576px) {
    .login-card {
      padding: 1.5rem;
      margin: 1rem;
    }
    
    .logo-image {
      width: 120px;
    }
    
    .login-title {
      font-size: 1.3rem;
    }
  }
  .wrapper > section:not(.sem-menu) { margin-left: 0 !important; margin-top: 0 !important; }

</style>
