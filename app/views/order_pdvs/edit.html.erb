      margin-bottom: 8px;
      display: flex;
      align-items: center;
    }

    .form-label i {
      color: #6c757d;
      margin-right: 6px;
    }

    .btn {
      transition: all 0.3s ease;
    }

    .btn:hover {
      transform: translateY(-2px);
    }

    /* LAYOUT MELHORADO DOS PRODUTOS */
    .product-item {
      background: linear-gradient(135deg, #2d3748 0%, #374151 100%);
      border: 1px solid #4a5568;
      border-radius: 12px;
      padding: 16px;
      margin-bottom: 12px;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .product-item:hover {
      transform: translateY(-3px);
      border-color: #68d391;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
      background: linear-gradient(135deg, #374151 0%, #4a5568 100%);
    }

    .product-image-container {
      width: 80px;
      height: 80px;
      border-radius: 8px;
      overflow: hidden;
      background: #4a5568;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #68d391;
      flex-shrink: 0;
    }

    .product-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .product-info {
      flex: 1;
      min-width: 0;
      padding: 0 12px;
    }

    .product-sku {
      font-weight: 700;
      font-size: 0.95rem;
      color: #68d391;
      margin: 0 0 4px 0;
      letter-spacing: 0.5px;
    }

    .product-name {
      color: #e2e8f0;
      font-size: 0.85rem;
      margin: 0 0 8px 0;
      line-height: 1.3;
      font-weight: 500;
    }

    .product-price {
      color: #4fd1c7;
      font-weight: 700;
      font-size: 1rem;
      margin: 0 0 6px 0;
    }

    .product-option {
      display: inline-block;
      background: rgba(104, 211, 145, 0.2);
      color: #68d391;
      padding: 2px 8px;
      border-radius: 12px;
      font-size: 0.7rem;
      font-weight: 600;
      border: 1px solid rgba(104, 211, 145, 0.3);
    }

    .product-actions {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
      flex-shrink: 0;
    }

    .add-to-cart-btn {
      padding: 10px 16px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.8rem;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
      min-width: 100px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .add-to-cart-btn:enabled {
      background: linear-gradient(135deg, #68d391 0%, #48bb78 100%);
      color: #1a202c;
      box-shadow: 0 4px 12px rgba(104, 211, 145, 0.3);
    }

    .add-to-cart-btn:enabled:hover {
      background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(104, 211, 145, 0.4);
    }

    .add-to-cart-btn:disabled {
      background: linear-gradient(135deg, #718096 0%, #4a5568 100%);
      color: #a0aec0;
      cursor: not-allowed;
      opacity: 0.7;
    }

    /* BADGES DE ESTOQUE MELHORADOS */
    .stock-info {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-top: 6px;
    }

    .stock-badge {
      font-size: 0.75rem;
      font-weight: 700;
      padding: 4px 10px;
      border-radius: 20px;
      display: inline-flex;
      align-items: center;
      gap: 4px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border: 1px solid;
    }

    .stock-high {
      background: rgba(72, 187, 120, 0.2);
      color: #48bb78;
      border-color: #48bb78;
    }

    .stock-low {
      background: rgba(237, 137, 54, 0.2);
      color: #ed8936;
      border-color: #ed8936;
    }

    .stock-out {
      background: rgba(245, 101, 101, 0.2);
      color: #f56565;
      border-color: #f56565;
    }

    .stock-error {
      background: rgba(160, 174, 192, 0.2);
      color: #a0aec0;
      border-color: #a0aec0;
    }

    .stock-quantity {
      font-weight: 700;
      font-size: 0.8rem;
      color: #e2e8f0;
      background: rgba(45, 55, 72, 0.8);
      padding: 2px 8px;
      border-radius: 12px;
      border: 1px solid #4a5568;
    }

    /* LAYOUT MELHORADO DOS ITENS ATUAIS */
    .current-item-card {
      background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
      border: 1px solid #4a5568;
      border-radius: 12px;
      margin-bottom: 12px;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }

    .current-item-card:hover {
      transform: translateY(-2px);
      border-color: #e53e3e;
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.4);
    }

    .current-item-content {
      display: flex;
      align-items: center;
      padding: 12px;
      gap: 12px;
    }

    .current-item-image {
      width: 60px;
      height: 60px;
      border-radius: 8px;
      overflow: hidden;
      background: #4a5568;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #e53e3e;
      flex-shrink: 0;
    }

    .item-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .item-placeholder {
