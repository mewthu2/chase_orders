      color: #e53e3e;
      padding: 2px 6px;
      border-radius: 8px;
      font-size: 0.65rem;
      font-weight: 600;
      border: 1px solid rgba(229, 62, 62, 0.3);
      margin-bottom: 6px;
    }

    .item-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 4px;
    }

    .item-quantity {
      font-size: 0.75rem;
      color: #a0aec0;
      font-weight: 600;
    }

    .item-price {
      font-size: 0.75rem;
      color: #4fd1c7;
      font-weight: 600;
    }

    .item-total {
      font-weight: 700;
      font-size: 0.9rem;
      color: #48bb78;
      text-align: right;
    }

    .current-item-actions {
      display: flex;
      align-items: center;
      flex-shrink: 0;
    }

    .remove-item-btn {
      background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
      color: white;
      border: none;
      border-radius: 8px;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(229, 62, 62, 0.3);
    }

    .remove-item-btn:hover {
      background: linear-gradient(135deg, #c53030 0%, #9c2626 100%);
      transform: scale(1.1);
      box-shadow: 0 4px 12px rgba(229, 62, 62, 0.4);
    }

    .remove-item-btn i {
      font-size: 0.8rem;
    }

    /* ESTADO VAZIO DOS ITENS */
    .empty-items-state {
      text-align: center;
      padding: 40px 20px;
      color: #a0aec0;
    }

    .empty-items-state i {
      font-size: 3rem;
      margin-bottom: 16px;
      opacity: 0.5;
    }

    .empty-items-state h6 {
      font-size: 1.1rem;
      margin-bottom: 8px;
      color: #e2e8f0;
    }

    .empty-items-state p {
      font-size: 0.85rem;
      margin: 0;
      opacity: 0.7;
    }

