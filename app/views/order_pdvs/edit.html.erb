    @media (max-width: 768px) {
      .product-item {
        padding: 12px;
      }

      .product-image-container {
        width: 70px;
        height: 70px;
      }

      .product-info {
        padding: 0 8px;
      }

      .product-sku {
        font-size: 0.85rem;
      }

      .product-name {
        font-size: 0.8rem;
      }

      .add-to-cart-btn {
        min-width: 80px;
        padding: 8px 12px;
        font-size: 0.75rem;
      }

      .current-item-content {
        padding: 10px;
        gap: 10px;
      }

      .current-item-image {
        width: 50px;
        height: 50px;
      }

      .item-name {
        font-size: 0.75rem;
      }
    }
  </style>
<% end %>

<script>
let searchTimeout;

// Funções de loading
function showLoading(message = 'Processando...') {
  document.getElementById('loading-message').textContent = message;
  document.getElementById('loading-overlay').classList.remove('d-none');
}

function hideLoading() {
  document.getElementById('loading-overlay').classList.add('d-none');
}

// Busca de produtos
document.getElementById('product-search').addEventListener('input', function(e) {
  clearTimeout(searchTimeout);
  const query = e.target.value.trim();

  if (query.length < 2) {
    document.getElementById('search-results').innerHTML = '';
    return;
  }

  searchTimeout = setTimeout(() => {
    searchProducts(query);
  }, 300);
});

function searchProducts(query) {
  showLoading('Buscando produtos e verificando estoque...');

  fetch('/order_pdvs/search_product', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
    },
    body: JSON.stringify({ 
      query: query,
      order_pdv_id: <%= @order_pdv.id %>
    })
  })
  .then(response => response.json())
  .then(data => {
    hideLoading();
    const resultsContainer = document.getElementById('search-results');

    if (data.success && data.products.length > 0) {
      resultsContainer.innerHTML = data.products.map(product => {
        let stockClass = 'stock-out';
        let stockText = 'Sem Estoque';
        let stockIcon = '❌';

        if (product.stock_status === 'high') {
          stockClass = 'stock-high';
          stockText = 'Disponível';
          stockIcon = '✅';
        } else if (product.stock_status === 'low') {
          stockClass = 'stock-low';
          stockText = 'Baixo';
          stockIcon = '⚠️';
        } else if (product.stock_status === 'error') {
          stockClass = 'stock-error';
          stockText = 'Erro';
          stockIcon = '❓';
        }

        const isOutOfStock = product.stock_status === 'out';
        const buttonText = isOutOfStock ? '❌ Sem Estoque' : '➕ Adicionar';

        return `
          <div class="product-item">
            <div style="display: flex; align-items: center; gap: 12px;">
              <div class="product-image-container">
                ${product.image_url ? 
                  `<img src="${product.image_url}" alt="${product.name}" class="product-image">` :
                  `<i class="fas fa-image" style="color: #a0aec0; font-size: 1.2rem;"></i>`
                }
              </div>
              
              <div class="product-info">
                <div class="product-sku">${product.sku}</div>
                <div class="product-name">${product.name}</div>
                <div class="product-price">R$ ${product.price.toFixed(2)}</div>
                
                ${product.option1 ? 
                  `<div class="product-option">${product.option1}</div>` : 
                  ''
                }
                
                <div class="stock-info">
                  <span class="stock-badge ${stockClass}">
                    ${stockIcon} ${stockText}
                  </span>
                  <span class="stock-quantity">
                    ${product.stock} un.
                  </span>
                </div>
              </div>
              
              <div class="product-actions">
                <button 
                  onclick="addProductToOrder(${product.id}, 1, this)"
                  class="add-to-cart-btn"
                  ${isOutOfStock ? 'disabled' : ''}
                >
                  ${buttonText}
                </button>
              </div>
            </div>
          </div>
        `;
      }).join('');
    } else {
      resultsContainer.innerHTML = `
        <div class="text-center py-4">
          <i class="fas fa-search fa-3x text-muted mb-3"></i>
          <h6 class="text-muted">Nenhum produto encontrado</h6>
          <p class="text-muted small">Tente buscar por SKU ou nome do produto</p>
        </div>
      `;
    }
  })
  .catch(error => {
    hideLoading();
    console.error('Erro na busca:', error);
    document.getElementById('search-results').innerHTML = `
      <div class="text-center py-4">
        <i class="fas fa-exclamation-triangle text-danger fa-3x mb-3"></i>
        <h6 class="text-danger">Erro ao buscar produtos</h6>
        <p class="text-muted small">Tente novamente em alguns instantes</p>
      </div>
    `;
  });
}

function addProductToOrder(productId, quantity, buttonElement) {
  const originalText = buttonElement.innerHTML;
  buttonElement.innerHTML = '⏳ Adicionando...';
  buttonElement.disabled = true;

  showLoading('Adicionando produto ao pedido...');

  fetch(`/order_pdvs/<%= @order_pdv.id %>/add_product`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
    },
    body: JSON.stringify({
      product_id: productId,
      quantity: quantity
    })
  })
  .then(response => response.json())
  .then(data => {
    hideLoading();
    
    if (data.success) {
      buttonElement.innerHTML = '✅ Adicionado!';
      buttonElement.style.background = 'linear-gradient(135deg, #48bb78 0%, #38a169 100%)';
      
      // Atualizar badge do total
      document.getElementById('total-badge').innerHTML = `<i class="fas fa-dollar-sign me-1"></i>${data.total}`;
      
      // Recarregar após 1.5 segundos
      setTimeout(() => {
        location.reload();
      }, 1500);
    } else {
      buttonElement.innerHTML = originalText;
      buttonElement.disabled = false;
      alert(data.message || 'Erro ao adicionar produto');
    }
  })
  .catch(error => {
    hideLoading();
    console.error('Erro:', error);
    buttonElement.innerHTML = originalText;
    buttonElement.disabled = false;
    alert('Erro ao adicionar produto ao pedido');
  });
}

function removeItem(itemId) {
  if (!confirm('Remover este item do pedido?')) return;

  showLoading('Removendo item do pedido...');

  fetch(`/order_pdvs/<%= @order_pdv.id %>/remove_product`, {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
    },
    body: JSON.stringify({ item_id: itemId })
  })
  .then(response => response.json())
  .then(data => {
    hideLoading();
    
    if (data.success) {
      // Remover o item da interface
      document.getElementById(`item-${itemId}`).remove();
      
      // Atualizar badge do total
      document.getElementById('total-badge').innerHTML = `<i class="fas fa-dollar-sign me-1"></i>${data.total}`;
      
      // Verificar se não há mais itens
      const itemsContainer = document.getElementById('current-items');
      if (itemsContainer.children.length === 0) {
        itemsContainer.innerHTML = `
          <div class="empty-items-state" id="empty-state">
            <i class="fas fa-shopping-cart"></i>
            <h6>Nenhum item no pedido</h6>
            <p>Use a busca acima para adicionar produtos</p>
          </div>
        `;
      }
    } else {
      alert(data.message || 'Erro ao remover item');
    }
  })
  .catch(error => {
    hideLoading();
    console.error('Erro:', error);
    alert('Erro ao remover item do pedido');
  });
}

function previewChanges() {
  const form = document.querySelector('form');
  const formData = new FormData(form);
  
  let preview = "=== PREVIEW DAS ALTERAÇÕES ===\n\n";
  
  preview += "🏪 LOJA: " + formData.get('order_pdv[store_type]') + "\n";
  preview += "💳 PAGAMENTO: " + formData.get('order_pdv[payment_method]') + "\n\n";
  
  preview += "👤 CLIENTE:\n";
  preview += "Nome: " + formData.get('order_pdv[customer_name]') + "\n";
  if (formData.get('order_pdv[customer_email]')) {
    preview += "Email: " + formData.get('order_pdv[customer_email]') + "\n";
  }
  if (formData.get('order_pdv[customer_phone]')) {
    preview += "Telefone: " + formData.get('order_pdv[customer_phone]') + "\n";
  }
  if (formData.get('order_pdv[customer_cpf]')) {
    preview += "CPF: " + formData.get('order_pdv[customer_cpf]') + "\n";
  }
  
  if (formData.get('order_pdv[address1]')) {
    preview += "\n📍 ENDEREÇO:\n";
    preview += formData.get('order_pdv[address1]') + "\n";
    if (formData.get('order_pdv[city]')) {
      preview += formData.get('order_pdv[city]');
      if (formData.get('order_pdv[state]')) {
        preview += " - " + formData.get('order_pdv[state]');
      }
      preview += "\n";
    }
    if (formData.get('order_pdv[zip]')) {
      preview += "CEP: " + formData.get('order_pdv[zip]') + "\n";
    }
  }
  
  if (formData.get('order_pdv[discount_amount]') && parseFloat(formData.get('order_pdv[discount_amount]')) > 0) {
    preview += "\n💰 DESCONTO:\n";
    preview += "Valor: R$ " + parseFloat(formData.get('order_pdv[discount_amount]')).toFixed(2) + "\n";
    if (formData.get('order_pdv[discount_reason]')) {
      preview += "Motivo: " + formData.get('order_pdv[discount_reason]') + "\n";
    }
  }
  
  if (formData.get('order_pdv[notes]')) {
    preview += "\n📝 OBSERVAÇÕES:\n";
    preview += formData.get('order_pdv[notes]') + "\n";
  }
  
  alert(preview);
}

// Validação em tempo real
document.addEventListener('DOMContentLoaded', function() {
  const requiredFields = document.querySelectorAll('input[required]');
  
  requiredFields.forEach(field => {
    field.addEventListener('blur', function() {
      if (this.value.trim() === '') {
        this.classList.add('is-invalid');
      } else {
        this.classList.remove('is-invalid');
        this.classList.add('is-valid');
      }
    });
  });
  
  // Formatação automática do CEP
  const zipField = document.querySelector('input[name="order_pdv[zip]"]');
  if (zipField) {
    zipField.addEventListener('input', function() {
      let value = this.value.replace(/\D/g, '');
      if (value.length > 5) {
        value = value.substring(0, 5) + '-' + value.substring(5, 8);
      }
      this.value = value;
    });
  }
  
  // Formatação automática do CPF
  const cpfField = document.querySelector('input[name="order_pdv[customer_cpf]"]');
  if (cpfField) {
    cpfField.addEventListener('input', function() {
      let value = this.value.replace(/\D/g, '');
      if (value.length > 3) {
        value = value.substring(0, 3) + '.' + value.substring(3);
      }
      if (value.length > 7) {
        value = value.substring(0, 7) + '.' + value.substring(7);
      }
      if (value.length > 11) {
        value = value.substring(0, 11) + '-' + value.substring(11, 13);
      }
      this.value = value;
    });
  }
  
  // Formatação automática do telefone
  const phoneField = document.querySelector('input[name="order_pdv[customer_phone]"]');
  if (phoneField) {
    phoneField.addEventListener('input', function() {
      let value = this.value.replace(/\D/g, '');
      if (value.length > 2) {
        value = '(' + value.substring(0, 2) + ') ' + value.substring(2);
      }
      if (value.length > 10) {
        value = value.substring(0, 10) + '-' + value.substring(10, 14);
      }
      this.value = value;
    });
  }
});
</script>
